
task :bit_fields do
  puts "Building bit_fields"
 `g++ bit_fields.cpp -o bitfields`
end

task :templess_swap do
  puts "Building templess_swap"
  `g++ templess_swap.cpp -o templess_swap`
end

task :text_to_binary do
  puts "Building text_to_binary"
  `g++ text_to_binary.cpp -o text_to_binary`
end

task :all do
  Rake::Task.tasks.each do |t|
    t.invoke
  end
end

task :clean do
  `rm text_to_binary`
  `rm bitfields`
  `rm templess_swap`
end